<Window x:Class="Talk2Me_login.Passwordrecovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Recovery" Height="290" Width="299">
    <Grid>
        <Label Content="Secret question" Height="28" HorizontalAlignment="Left" Margin="40,73,0,0" Name="label1" VerticalAlignment="Top" Width="152" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="40,170,0,0" Name="SecretAnswerTextBox" VerticalAlignment="Top" Width="152" TextWrapping="Wrap" AcceptsReturn="True" />
        <Label Content="Secret answer" Height="28" HorizontalAlignment="Left" Margin="40,136,0,0" Name="label2" VerticalAlignment="Top" Width="152" />
        <TextBox AcceptsReturn="True" Height="23" HorizontalAlignment="Left" Margin="40,107,0,0" Name="SecretQuestionTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" />
        <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="40,208,0,0" Name="button1" VerticalAlignment="Top" Width="109" Click="button1_Click" />
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="40,12,0,0" Name="label3" VerticalAlignment="Top" Width="152" />
        <TextBox AcceptsReturn="True" Height="23" HorizontalAlignment="Left" Margin="40,44,0,0" Name="UsernameTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" />
    </Grid>
</Window>
